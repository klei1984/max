		set (CPACK_NSIS_INSTALL_ROOT "$PROGRAMFILES64")
	endif()

	set(CPACK_NSIS_DISPLAY_NAME "M.A.X. Port")
	set(CPACK_NSIS_PACKAGE_NAME "M.A.X. Port")
	set(CPACK_NSIS_BRANDING_TEXT " ")
	set(CPACK_NSIS_EXECUTABLES_DIRECTORY ".")
